# Makefile

all:
	cd pong; $(MAKE) $@
	cd shooter; $(MAKE) $@
	cd racing; $(MAKE) $@
	cd maze; $(MAKE) $@
	cd platformer; $(MAKE) $@
	cd pseudo3d; $(MAKE) $@
	cd adventure; $(MAKE) $@

clean:
	-cd pong; $(MAKE) $@
	-cd shooter; $(MAKE) $@
	-cd racing; $(MAKE) $@
	-cd maze; $(MAKE) $@
	-cd platformer; $(MAKE) $@
	-cd pseudo3d; $(MAKE) $@
	-cd adventure; $(MAKE) $@
