# Makefile

all:
	cd pong; $(MAKE) $@
	cd shooter; $(MAKE) $@
	cd racing; $(MAKE) $@
	cd platformer; $(MAKE) $@
	cd isometric; $(MAKE) $@
	cd adventure; $(MAKE) $@

clean:
	-cd pong; $(MAKE) $@
	-cd shooter; $(MAKE) $@
	-cd racing; $(MAKE) $@
	-cd platformer; $(MAKE) $@
	-cd isometric; $(MAKE) $@
	-cd adventure; $(MAKE) $@
